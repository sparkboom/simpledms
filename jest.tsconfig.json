{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "preserveSymlinks": true
  },
  "include": [
    "packages/api/src/**/*",
    "packages/app/src/**/*",
    "packages/ux/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
